# editorconfig.org
# This file is for unifying the coding style for different editors

# Stop the editor from looking for .editorconfig files in the
# parent directories
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 2
max_line_length = 80
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,yml}]
indent_style = space

[*.md]
indent_style = space
trim_trailing_whitespace = false
